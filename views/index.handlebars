<link rel="stylesheet" href="/assets/css/style.css">
<h3>Scraped Articles</h3>
<div>
    {{#each article}}
      <div class="card">
        <div class = "card-body">
            <a href="{{this.link}}" class="card-title" target="_blank"><h6>{{this.slug}}</h6></a>
            <a href="{{this.link}}" class="card-title" target="_blank"><h4>{{this.title}}</h4></a>
            <p>{{this.summary}}</p>
            <a href="{{this.link}}" class="card-title" target="_blank"><img src="{{this.imgSource}}"/></a>
            <form method="POST" action="/saved/{{this._id}}?_method=PUT">
                <button type="submit" class="btn btn-success" id="SaveArticle">Save</button>
            </form>
        </div>
      </div>
    {{/each}}
  </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>